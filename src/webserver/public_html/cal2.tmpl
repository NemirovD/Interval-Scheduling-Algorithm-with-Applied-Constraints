	<script src="http://cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.3.2/fullcalendar.min.js" ></script>
	<link href="http://cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.3.2/fullcalendar.min.css"  rel="stylesheet" type="text/css">
	<link href="public_html/cal.css"  rel="stylesheet" type="text/css">
	<script>
		$(document).ready(function() {
			%for i in range(len(calendars)):
			    $('#calendar{{i}}').fullCalendar({
			                      // put your options and callbacks here
					minTime: '08:00',
					maxTime: '21:30',
					height:670,
					textColor: "black",
					weekends: false,                          
					defaultView: 'agendaWeek',
					events : {{!calendars[i][0]}},
					header : false,
					allDaySlot: false,
					columnFormat: 'ddd'
				})
				$('#calendarw2{{i}}').fullCalendar({
					minTime: '08:00',
					maxTime: '21:30',
					height:670,
					textColor: "black",
					weekends: false,                          
					defaultView: 'agendaWeek',
					events : {{!calendars[i][1]}},
					header : false,
					allDaySlot: false,
					columnFormat: 'ddd'
				})
			%end
		});
	</script>
</HEAD>
<body>
 <div class='mainWrap' >
 <div class='buttonwrap'>
	<div id ="buttonArea" class='buttonArea'>
		Pick Your Schedule:
		%for i in range(len(calendars)):
			<button id="button{{i}}">
				Calendar {{i+1}}
			</button>
		%end		
	</div>
   </div>
	
   <div id='calCanvas' class='calCanvas'>
		%for i in range(len(calendars)):
			<div id="cal{{i}}" class='calContainer'>
				<div class='calArea'>
            <div class='calsubarea' >
               <div class='mycalendar' id='w1mycalendar{{i}}' >
               <div class='weektitle'>Week 1</div>
						<div id='calendar{{i}}'></div>




					</div>

					<div class='mycalendar' id='w2mycalendar{{i}}' >
               <div class='weektitle'>Week 2</div>
						<div id='calendarw2{{i}}'></div>
					</div>
               </div>

          </div>
          <br><br><br>
          <div id='warningsarea' >

				<div class='calnotes notes'>
					%for note in calendars[i][2]:
						{{note}} <br />
					%end
				</div>
					%for warning in calendars[i][3]:
				<div class='calnotes warnings'>
						{{warning}} <br />
				</div>
					%end

          </div>
		  </div>
		%end	
	</div>

   </div>


<script>
function hideAllCalendars(){
	for (var i = 0; i < {{len(calendars)}}; ++i){
		var id = '#cal' + i;
		var id2 = '#cal' + i;
		$(id).hide();
		$(id2).hide();
	}
}

$(document).ready(function() {
	hideAllCalendars();
	$('#cal0').show();
	$('#cal0').show();

	%for i in range(len(calendars)):
		$('#button{{i}}').click(function(){
			hideAllCalendars()
			$('#cal{{i}}').show();
			$('#cal{{i}}').show();
		});
	%end
});
</script>



